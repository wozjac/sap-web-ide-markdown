{
	"name": "sap-web-ide-markdown-preview",
	"description": "Preview of Markdown (.md) files in SAP Web IDE",
	"i18n": "sap-web-ide-markdown-preview/i18n/i18n",
	"requires": {
		"services": [
			"usernotification",
			"log",
			"command",
			"commandGroup"
		]
	},
	"provides": {
		"services": {
			"sample": {
				"implements": "sap-web-ide-markdown-preview.service.Sample",
				"module": "sap-web-ide-markdown-preview/service/Sample"
			}
		},

		"interfaces": {
			"sap-web-ide-markdown-preview.service.Sample": "sap-web-ide-markdown-preview/service/Sample"
		}
	},
	"configures": {
		"services": {
			"command:commands": [{
				"id": "sap-web-ide-markdown-preview.helloWorld",
				"label": "{i18n>command_helloWorld}",
				"service": "sap-web-ide-markdown-preview/command/HelloWorld"
			}],

			"commandGroup:groups": [{
				"id": "tools.sample",
				"label": "{i18n>commandgroup_sample}"
			}, {
				"id": "tools.sample.helloWorld"
			}],

			"commandGroup:items": [{
				"parent": "tools",
				"type": "menu",
				"group": "tools.sample",
				"prio": 100
			}, {
				"parent": "tools.sample",
				"type": "inline",
				"group": "tools.sample.helloWorld",
				"prio": 10
			}, {
				"parent": "tools.sample.helloWorld",
				"type": "action",
				"command": "sap-web-ide-markdown-preview.helloWorld",
				"prio": 10
			}]
		}
	},

	"subscribes": {
		"sample:notificationDisplayed": "sample:onAfterNotificationDisplayed"
	}
}